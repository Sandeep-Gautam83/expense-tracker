{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Personal finance tool built with MERN stack",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "server": "npm run dev --workspace=server",
    "client": "npm run dev --workspace=client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && npm install --workspace=server && npm install --workspace=client"
  },
  "keywords": [
    "expense",
    "tracker",
    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
